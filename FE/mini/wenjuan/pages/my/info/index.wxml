<!--pages/fill_in/index.wxml-->
<view class='container'>
    <view class='fill'>
        <view class='fill_list clf'>
            <view class='fl left'>
                <i class='color'>*</i>我的姓名
            </view>
            <view class='fl right'>
                <input type='text' class='fr' placeholder='请输入您的姓名' data-name="name" bindinput="setInputValue" value="{{userAuthInfo.name}}" disabled="disabled"></input>
            </view>
        </view>

        <view class='fill_list clf'>
            <view class='fl left'>
                <i class='color'>*</i>联系方式
            </view>
            <view class='fl right'>
                <input type='text' class='fr' placeholder='请输入联系方式' data-name="mobile" bindinput="setInputValue" value="{{userAuthInfo.mobile}}" disabled="disabled"></input>
            </view>
        </view>

        <view class='fill_list clf'>
            <view class='fl left'>
                <i class='color'>*</i>年龄
            </view>
            <view class='fl right'>
                <input type='text' class='fr' placeholder='请输入您的年龄' data-name="age" bindinput="setInputValue" value="{{userAuthInfo.age}}" disabled="disabled"></input>
            </view>
        </view>
        <view class='fill_list clf'>
            <view class='fl left'>证件类型</view>
            <view class='fl right'>
                <input type='text' class='fr' placeholder='身份证'  disabled></input>
            </view>
        </view>

        <view class='fill_list clf'>
            <view class='fl left'>证件号码</view>
            <view class='fl right'>
                <input type='text' class='fr' placeholder='请输入身份证号码' data-name="sfz_number" bindinput="setInputValue" value="{{userAuthInfo.sfz_number}}" disabled="disabled"></input>
            </view>
        </view>
        <view class='fill_list clf'>
            <view class='fl left'>学历</view>
            <view class='fl right'>
                <input type='text' class='fr' placeholder='请输入学历' data-name="education" bindinput="setInputValue" value="{{userAuthInfo.education}}" disabled="disabled"></input>
            </view>
        </view>

        <view class='fill_list clf'>
            <view class='fl left'>职业</view>
            <view class='fl right'>
                <input type='text' class='fr' placeholder='请输入您的职业' data-name="occupation" bindinput="setInputValue" value="{{userAuthInfo.occupation}}" disabled="disabled"></input>
            </view>
        </view>
    </view>

    <!--<view class='hint'>带<i class='color'>*</i>栏目为必填栏目</view>

    <view class='btn_box'>
        <view class='btn' bindtap="backToMyIndex">取消</view>
        <view class='btn next' bindtap="submitBtn">确认更改</view>
    </view>-->
</view>
