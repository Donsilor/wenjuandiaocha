/* pages/my/index.wxss */
.img_box{position: relative;width: 750rpx;height: 248rpx;padding-top: 60rpx;box-sizing: border-box;margin-bottom: 50rpx}
.img_box .bg_img{width: 100%;height: 100%;position: absolute;top: 0;left: 0;z-index: -1;}

.img_box .user_img{width: 102rpx;height: 102rpx;background-color: saddlebrown;margin: 0 auto 10rpx;border-radius: 50%}
.img_box .user_img .img{width: 100%;height: 100%;border-radius: 50%}
.img_box .user_name{font-size: 30rpx;color: #fff;text-align: center}

.box{width: 670rpx;height: 100rpx;border-radius: 10rpx;font-size: 28rpx;color: #333;margin: 30rpx auto 0;-moz-box-shadow:0px 0px 3px #ccc; -webkit-box-shadow:0px 0px 5px #ccc; box-shadow:0px 0px 8px #ccc;line-height: 100rpx;}
.box .ans{width: 26rpx;height: 28rpx;margin: 36rpx 30rpx;position: relative}
.box .mis{width: 30rpx;height: 28rpx;margin: 36rpx 28rpx;position: relative}
.box view image{width: 100%;height: 100%;position: absolute;top: 0;left: 0}